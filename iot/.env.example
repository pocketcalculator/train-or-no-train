# IoT Configuration Environment Variables
# Copy this file to .env and fill in your actual values

# Azure IoT Hub Connection String
# Get this from your Azure IoT Hub > Shared access policies > device
AZURE_IOT_CONNECTION_STRING="HostName=YOUR_IOT_HUB.azure-devices.net;DeviceId=YOUR_DEVICE_ID;SharedAccessKey=YOUR_SHARED_ACCESS_KEY"

# Optional: Azure Storage for image uploads
AZURE_STORAGE_CONNECTION_STRING="DefaultEndpointsProtocol=https;AccountName=YOUR_ACCOUNT;AccountKey=YOUR_KEY;EndpointSuffix=core.windows.net"

# Image processing settings
IMAGE_QUALITY=85
MAX_IMAGE_SIZE=1024